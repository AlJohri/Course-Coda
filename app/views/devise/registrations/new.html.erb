<div class="container">
  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <h2>Register</h2>
      <hr class="colorgraph">
      <% devise_error_messages!.each do |key, value| %>
        <div class="alert alert-danger registration-alert"><b><%= key %>: </b><%= value %></div>
      <% end %>
      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, :class => "form-control input-lg", placeholder: "Email Address"  %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :id => "password", :class => "form-control input-lg", placeholder: "Password" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, :id => "password", :class => "form-control input-lg", placeholder: "Confirm Password" %>
      </div>
      <hr class="colorgraph">
      <div>
          <%= f.submit "Register", :id => "register-button", :class => "btn btn-lg btn-success btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>