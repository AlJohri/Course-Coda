<div class="container">
  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <h2>Please Sign In</h2>
      <hr class="colorgraph">
      <% devise_error_messages!.each do |key, value| %>
        <div class="alert alert-danger login-alert"><b><%= key %>: </b><%= value %></div>
      <% end %>
      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, :class => "form-control input-lg", placeholder: "Email Address"  %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :id => "password", :class => "form-control input-lg", placeholder: "Password" %>
      </div>
      <span class="button-checkbox">
        <button type="button" class="btn" data-color="info">Remember Me</button>
        <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, :class => "hidden" %>
        <% end -%>
      </span>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <%= f.submit "Sign in", :class => "btn btn-lg btn-success btn-block" %>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6">
          <%= link_to "Register", new_user_registration_path, :id => "login-button", :class => "btn btn-lg btn-primary btn-block" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>