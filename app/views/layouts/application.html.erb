<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @title || "Northwestern CTEC" %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "//www.fuelcdn.com/fuelux/2.4.1/css/fuelux.min.css" %>
  <%= stylesheet_link_tag  "//www.fuelcdn.com/fuelux/2.4.1/css/fuelux-responsive.css" %>
  <%= stylesheet_link_tag  "//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" %>
  <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" %>
  <%= javascript_include_tag "http://www.fuelcdn.com/fuelux/2.4.1/loader.min.js" %>
  <%= javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js" %>
  <%= javascript_include_tag "application" %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if Rails.env.production? %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-47155628-1', 'nuctecs.com');
      ga('send', 'pageview');

      ga('send', 'event', 'page', 'loaded', window.location.search)
    </script>
  <% end %>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Northwestern CTEC</a>
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li class="dropdown">
            <a role="button" class="dropdown-toggle" data-toggle="dropdown" href="#">
              Courses by department
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" role="menu">
              <% subjects.each do |s| %>
                <li><a href=<%= "/courses?s=#{s.id}" %>><%= s.name %></a></li>
              <% end %>
            </ul>
          </li>
          <li class="dropdown">
            <a role="button" class="dropdown-toggle" data-toggle="dropdown" href="#">
              Professors by department
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" role="menu">
              <% subjects.each do |s| %>
                <li><a href=<%= "/professors?s=#{s.id}" %>><%= s.name %></a></li>
              <% end %>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <%= link_to current_user.email, root_path %>
            </li>
          <% else %>
            <li>
              <%= link_to "Register", new_user_registration_path %>
            </li>
            <li>
              <%= link_to "Sign In", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div class="container">
    <div id = "alert_placeholder"></div>
  </div>

  <div class="container-fluid">
    <% unless user_signed_in? or flash[:notice] or flash[:alert]  %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        Northwestern CTEC is currently in a closed beta. Contact <%= mail_to "gabe@nuctecs.com" %> to find out more.
      </div>
    <% end %>
    <% if flash[:notice] %>
       <div class="alert alert-info alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
       <div class="alert alert-info alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
    <div class="row-fluid">
      <%= yield %>
    </div>
    <hr>

    <footer>
      <!-- <p>&copy; Gabriel Peal 2012</p> -->
    </footer>
  </div><!--/.fluid-container-->
</body>
</html>
